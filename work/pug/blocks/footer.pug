footer.footer
  .container-outter
    a.footer__logo(href="index.html")
      picture
        source(type="image/webp", media="(min-width: 1440px)", srcset="./img/logo-desktop-blue@1x.webp, ./img/logo-desktop-blue@2x.webp 2x")
        source(type="image/webp", media="(min-width: 768px)", srcset="./img/logo-tablet-blue@1x.webp, ./img/logo-tablet-blue@2x.webp 2x")
        source(type="image/webp", srcset="./img/logo-mobile-blue@1x.webp, ./img/logo-mobile-blue@2x.webp 2x")
        source(media="(min-width: 1440px)", srcset="./img/logo-desktop-blue@1x.png, ./img/logo-desktop-blue@2x.png 2x")
        source(media="(min-width: 768px)", srcset="./img/logo-tablet-blue@1x.png, ./img/logo-tablet-blue@2x.png 2x")
        img.logo(src="./img/logo-mobile-blue@1x.png", srcset="./img/logo-mobile-blue@2x.png 2x", alt="Логотип компании")
    .social.footer__social
      a.social__link.social__link--alt(href="#")
        svg.social__svg(aria-label="facebook")
          use(xlink:href="./img/general.svg#icon-fb")
      a.social__link.social__link--alt(href="#")
        svg.social__svg(aria-label="вконтакте")
          use(xlink:href="./img/general.svg#icon-vk")
      a.social__link.social__link--alt(href="#")
        svg.social__svg(aria-label="инстаграм")
          use(xlink:href="./img/general.svg#icon-inst")
    .footer__creator
      p.footer__creator-desc Разработано
      a.footer__creator-logo(href="https://htmlacademy.ru")
        img(src="./img/htmlacademy.svg" width="27" height="33" alt="Логотип создателя сайта")
